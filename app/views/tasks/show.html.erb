<h1>詳細</h1>

<table>
  <tbody>
    <tr>
      <th>ID</th>
      <td><%= @task.id %></td>
    </tr>
    <tr>
      <th>タイトル</th>
      <td><%= @task.title %></td>
    </tr>
    <tr>
      <th>詳細</th>
      <td><%= @task.content %></td>
    </tr>
    <tr>
      <th>期限</th>
      <td><%= @task.deadline %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @task.status %></td>
    </tr>
    <tr>
      <th>優先度</th>
      <td><%= @task.priority %></td>
    </tr>
    <tr>
      <th>登録日時</th>
      <td><%= @task.created_at %></td>
    </tr>
    <tr>
      <th>更新日時</th>
      <td><%= @task.updated_at %></td>
    </tr>
  </tbody>
</table>
<%= link_to "一覧", tasks_path %>
<%= link_to "編集", edit_task_path(@task.id) %>
<%= link_to "削除", task_path(@task.id), method: :delete, data: { confirm: '本当に削除していいですか' } %>