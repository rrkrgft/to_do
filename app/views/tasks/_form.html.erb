<%= form_with(model: @task, local: true) do |t| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= t.label :title %>
    <%= t.text_field :title %>
  </div>
  <div>
    <%= t.label :content %>
    <%= t.text_field :content %>
  </div>
  <div>
    <%= t.label :deadline %>
    <%= t.date_field :deadline %>
  </div>
  <%= t.submit "登録" %>
<% end %>