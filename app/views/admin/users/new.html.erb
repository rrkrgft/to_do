<h1 class="my-3">【管理者】ユーザー登録</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local:true) do |u| %>
  <div class="form-group my-2">
    <%= u.label :name %>
    <%= u.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group my-2">
    <%= u.label :email %>
    <%= u.email_field :email, class: "form-control" %>
  </div>
  <div class="form-group my-2">
    <%= u.label :password %>
    <%= u.password_field :password, class: "form-control" %>
  </div>
  <div class="form-group my-2">
    <%= u.label :password_confirmation %>
    <%= u.password_field :password_confirmation, class: "form-control" %>
  </div>
  <div class="form-check my-2">
    <%= u.label :admin, class: "form-check-label" %>
    <%= u.check_box :admin, class: "form-check-input" %>
  </div>
  <%= u.submit "登録", class: "btn btn-primary my-2" %>
<% end %>