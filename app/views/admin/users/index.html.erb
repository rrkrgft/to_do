<h1 class="my-3">一覧画面</h1>

<div class="mb-3">
  <table class="table table-hover">
    <thead class="tehad-default">
      <tr>
        <th>ユーザー名</th>
        <th>メールアドレス</th>
        <th>タスク登録件数</th>
        <th>管理者権限</th>
        <th>登録日時</th>
      </tr>
    </thead>
    <tbody>
      <% @user.each do |u| %>
        <tr>
          <td><%= link_to u.name, admin_user_path(u.id), class: "task_row" %></td>
          <td><%= u.email %></td>
          <td><%= u.tasks.count %></td>
          <td><%= u.admin %></td>
          <td><%= u.created_at %></td>
          <td><%= link_to "編集", edit_admin_user_path(u.id), class: "btn btn-outline-secondary" %></td>
          <td><%= link_to "削除", admin_user_path(u.id), method: :delete, class: "btn btn-danger", data: { confirm: '本当に削除していいですか' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "新規登録", new_admin_user_path, class: "btn btn-primary" %>
</div>