<h1>ユーザー情報</h1>

<table class="table table-hover">
  <tbody>
    <tr>
      <th>ユーザーID</th>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th>登録日時</th>
      <td><%= @user.created_at %></td>
    </tr>
    <tr>
      <th>更新日時</th>
      <td><%= @user.updated_at %></td>
    </tr>
  </tbody>
</table>
